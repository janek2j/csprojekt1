<Window x:Class="KoszykZakupowy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoszykZakupowy"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top" Height="30" Margin="0,0,0,0" VerticalAlignment="Top" Background="#FFB6ABAB">
            <Button>Podsumowanie koszyka</Button>
            <Button>Wyślij zamówienie</Button>
            <Button>Podsumowanie zamównienia</Button>
        </Menu>
        <Button DockPanel.Dock="Bottom">Bottom</Button>
        <Button DockPanel.Dock="Left" Width="100">Left</Button>
        <Canvas>
            <ComboBox x:Name="ComboBoxProdukty" Width="196" Canvas.Left="10" Canvas.Top="10" Height="30">

            </ComboBox>
            <ListBox x:Name="ListBoxKoszyk" Height="274" Width="245" Canvas.Left="312" Canvas.Top="32"></ListBox>
            <Button x:Name="ButtonDodaj" Canvas.Left="60" Canvas.Top="60" Width="120" Padding="5">Dodaj do koszyka</Button>
            <Button x:Name="ButtonUsun" Canvas.Left="60" Canvas.Top="100" Width="120" Padding="5">Usuń z koszyka</Button>
            <Button x:Name="ButtonIlosc" Canvas.Left="60" Canvas.Top="140" Width="120" Padding="5">Zmień ilość</Button>
            <Button x:Name="ButtonZamow" Canvas.Left="60" Canvas.Top="180" Width="120" Padding="5">Wyślij zamówienie</Button>


        </Canvas>
    </DockPanel>
</Window>
